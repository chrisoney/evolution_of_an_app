mixin field(labelText, fieldName, fieldValue, placeholder, fieldType = 'text')
  div(class='form-group')
    label(for=fieldName class='form-label')= labelText
    input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder class='form-control')

mixin validationErrorSummary(errors)
  if errors
    ul.error-list 
      each error in errors
        li.error= error

//- Overloaded the site when used too much 
mixin ratingsSection(rating, storyId, loggedin)
  div(class='ratings-container' data-story-id=storyId data-current-rating=rating)
    if rating
      - var i = 0, j = rating + 1
      while i < rating
        span(data-score=(i+1) class=`fas fa-star ${loggedin ? 'user-rating' : ''}`)
        - i++
      while j <= 5
        span(data-score=j class=`far fa-star ${loggedin ? 'user-rating' : ''}`)
        - j++
    else
        - var i = 0
        while i < 5
        span(data-score=(i+1) class=`far fa-star ${loggedin ? 'user-rating' : ''}`)
        - i++